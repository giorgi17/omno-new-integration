{
    "compilerOptions": {
        "lib": ["es2020"],
        "module": "commonjs",
        "target": "es2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "incremental": true,
        "sourceMap": true,
        "outDir": "build",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "paths": {
            "@*": ["src/*"],
            "@generated/*": ["generated/*"],
            "@config/*": ["src/config/*"],
            "@controller/*": ["src/controller/*"],
            "@plugins/*": ["src/plugins/*"],
            "@routes/*": ["src/routes/*"],
            "@service/*": ["src/service/*"],
            "@utils/*": ["src/utils/*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "build"]
}
